<%- include('templates/navbar') %>

    <div class="container mt-4">
        <% if (user) { %>
            <h1>Welcome, <%= user.username %>
            </h1>
            <ul class="list-group mt-3">
                <li class="list-group-item">Email: <%= user.email %>
                </li>
                <li class="list-group-item">Total API requests made: <%= user.apiRequests %>
                </li>
                <li class="list-group-item">Role: <%= user.isAdmin ? "Admin" : "Basic user" %>
                </li>
                <% if (user.apiRequests> 20) { %>
                    <li class="list-group-item text-warning">Message: You have made more
                        than 20 API requests.</li>
                    <% } %>
            </ul>

            <form action="/callAPI" method="post" class="mt-4">
                <div class="mb-3">
                    <label for="apiInput" class="form-label">API Request</label>
                    <textarea class="form-control" id="apiInput" name="apiInput" rows="3"
                        placeholder="Enter API request"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Call API</button>
            </form>
            <% } else { %>
                <h1>Welcome to the members area</h1>
                <p>Please log in to view your profile.</p>
                <a class="btn btn-primary" href="/login">Login</a>
                <% } %>
    </div>

    <%- include('templates/footer') %>